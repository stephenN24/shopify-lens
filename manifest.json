{
  "manifest_version": 3,
  "name": "Shopify Lens",
  "version": "1.0",
  "description": "Access and display the Shopify object data from a website.",
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/images/icon-16.png",
      "48": "src/assets/images/icon-48.png",
      "128": "src/assets/images/icon-128.png"
    }
  },
  "icons": {
    "16": "src/assets/images/icon-16.png",
    "48": "src/assets/images/icon-48.png",
    "128": "src/assets/images/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/content/inject-script.js", "src/assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
